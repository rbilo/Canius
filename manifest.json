{
    "manifest_version": 2,
    "name": "Canius",
    "version": "1.0",
  
    "description": "Removes the news articles from the firefox homepage",
  
    "icons": {
      "48": "icons/border-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["borderify.js"]
      }
    ]
  }
  